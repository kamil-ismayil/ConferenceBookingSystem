<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF0EC">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:background="#3C423B"
        app:layout_constraintBottom_toTopOf="@+id/CitySearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_timetomeet"
        tools:srcCompat="@drawable/logo_timetomeet" />

    <Spinner
        android:id="@+id/CitySearch"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:autofillHints="City"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    <Button
        android:id="@+id/SearchButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="#5BD744"
        android:text="@android:string/search_go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/People" />

    <EditText
        android:id="@+id/People"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="People"
        android:inputType="number"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/SearchButton"
        app:layout_constraintEnd_toStartOf="@+id/Date"
        app:layout_constraintStart_toEndOf="@+id/CitySearch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:ems="10"
        android:hint="Date"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/People"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="450dp"
        android:windowSoftInputMode="adjustPan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SearchButton">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <ScrollView
                        android:layout_width="160dp"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView27"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sankt Jörgen Park Resort Knipplekullen 8, Göteborg Sankt Jörgen Park är en unik destination på flera sätt, inte minst för er som ska planera för en konferens. Vi är ett designhotell med spa, golfbana och flera fantastiska restauranger några få kilometer från Göteborg. Men tack vare vår Sport Club är vi äv ..." />
                        </LinearLayout>
                    </ScrollView>

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="65dp"
                        android:layout_height="60dp"
                        android:text="300kr" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Button" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ScrollView
                        android:layout_width="230dp"
                        android:layout_height="100dp">

                        <TextView
                            android:id="@+id/textView244"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sankt Jörgen Park Resort Knipplekullen 8, Göteborg Sankt Jörgen Park är en unik destination på flera sätt, inte minst för er som ska planera för en konferens. Vi är ett designhotell med spa, golfbana och flera fantastiska restauranger några få kilometer från Göteborg. Men tack vare vår Sport Club är vi äv ..." />
                    </ScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView255"
                            android:layout_width="65dp"
                            android:layout_height="64dp"
                            android:text="3000 kr" />

                        <Button
                            android:id="@+id/button777"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:text="Book" />
                    </LinearLayout>

                </LinearLayout>

            </TableRow>

        </TableLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>