<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateAccount" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#EDF0EC"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#3C423B"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-55dp"
                app:srcCompat="@drawable/ttmlogo" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="All fields are mandatory" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="103dp"
                            android:layout_height="600dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:singleLine="false"
                                android:text="First name"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Last name"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Username"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Password"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="17dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Email"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Phone"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Company"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Org No"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Street"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="Zip code"
                                android:textColor="@color/Black" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center_vertical"
                                android:paddingTop="10dp"
                                android:text="City"
                                android:textColor="@color/Black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="600dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/txtFirstName"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="10dp"
                                android:autoText="false"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtLastName"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtUserName"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginRight="10dp"
                                android:digits="abcdefghijklmnopqrstuvwxyzåäö1234567890@.-_"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginRight="10dp"
                                android:editable="false"
                                android:ems="10"
                                android:enabled="false"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPassword"
                                android:paddingTop="15dp" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="Password is auto generated" />

                            <EditText
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginRight="10dp"
                                android:digits="abcdefghijklmnopqrstuvwxyzåäö1234567890@.-_"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textEmailAddress"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="49dp"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="number"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtCompany"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtOrgno"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="number"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtStreet"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPostalAddress"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtZipcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="number"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                            <EditText
                                android:id="@+id/txtCity"
                                android:layout_width="match_parent"
                                android:layout_height="51dp"
                                android:layout_marginRight="10dp"
                                android:ems="10"
                                android:fontFamily="@font/montserrat"
                                android:inputType="textPersonName"
                                android:paddingTop="15dp"
                                android:textColor="@color/Black" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#5BD744"
            android:fontFamily="@font/montserrat"
            android:text="Create"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
